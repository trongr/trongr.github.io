{
  "extends": [
    "prettier/@typescript-eslint",
    "google",
    "airbnb",
    "plugin:prettier/recommended",
    "prettier",
    "prettier/standard",
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 8
  },
  "env": {
    "node": true,
    "mocha": true,
    "browser": true,
    "jquery": true,
    "commonjs": true
  },
  "globals": {
    "_": true,
    "CurrentFaceModel": false,
    "FacesGridView": false,
    "CurrentFaceView": false,
    "FacesGridModel": false,
    "Conf": false,
    "ViewsUtils": false,
    "API": false
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": [
      "error",
      "double",
      {
        "allowTemplateLiterals": true
      }
    ],
    "semi": ["error", "never"],
    "consistent-return": "off",
    "no-underscore-dangle": "off",
    "func-names": "off",
    "no-param-reassign": "off",
    "no-console": "off",
    "no-multi-assign": "off",
    "object-curly-spacing": [
      "error",
      "always",
      { "arraysInObjects": true, "objectsInObjects": true }
    ],
    "no-invalid-this": "off",
    "new-cap": "off",
    "no-shadow": "off",
    "import/prefer-default-export": "off",
    "@typescript-eslint/interface-name-prefix": "always"
  }
}
